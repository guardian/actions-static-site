{
  "name": "actions-static-site",
  "version": "0.1.0",
  "description": "A Github Action to deploy a Guardian static site.",
  "main": "index.js",
  "scripts": {
    "build": "esbuild index.ts --bundle --platform=node --target=node16 --outfile=index.js",
    "test": "jest",
    "tsc": "tsc --noEmit",
    "lint": "eslint . --ext .ts --no-error-on-unmatched-pattern --fix",
    "synth-infra": "cdk synth --path-metadata false --version-reporting false"
  },
  "repository": {
    "type": "git",
    "url": "github.com/guardian/actions-riff-raff"
  },
  "author": "nicolas.long@theguardian.com",
  "license": "ISC",
	"eslintConfig": {
    "extends": "@guardian/eslint-config-typescript"
  },
  "eslintIgnore": [
    "packages/common/dist"
  ],
  "prettier": "@guardian/prettier",

  "dependencies": {
    "@actions/artifact": "^1.1.0",
    "@actions/core": "^1.6.0",
    "@aws-sdk/client-ssm": "^3.572.0",
    "esbuild": "^0.14.29",
    "js-yaml": "^4.1.0"
  },
  "devDependencies": {
    "@guardian/cdk": "48.5.1",
    "@guardian/eslint-config-typescript": "^1.0.11",
    "@guardian/prettier": "^2.0.0",
    "@guardian/private-infrastructure-config": "git+ssh://git@github.com/guardian/private-infrastructure-config.git#v2.1.3",
    "@types/jest": "^27.4.1",
    "@types/js-yaml": "^4.0.5",
    "@types/node": "^17.0.23",
    "@typescript-eslint/eslint-plugin": "^5.42.1",
    "@typescript-eslint/parser": "^5.42.1",
    "aws-cdk-lib": "2.50.0",
    "constructs": "10.1.155",
    "eslint": "^8.27.0",
    "jest": "^27.5.1",
    "prettier": "2.7.1",
    "ts-jest": "^27.1.4",
    "typescript": "^4.6.3"
  }
}
